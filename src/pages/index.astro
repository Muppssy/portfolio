  "/img/Bookhub.png",
];

const devs = [
  { name: "FullStack", icon: "fa-solid fa-code fa-lg text-red-500" },
  { name: "Passion", icon: "fa-solid fa-computer fa-lg text-blue-500" },
  { name: "Creative", icon: "fa-solid fa-pencil fa-lg text-green-500" }
];

const contact = [
  { name: "Email", icon: "fa-solid fa-envelope", adress:"test.emailpro@gmail.com" },
  { name: "Linkedin", icon: "fa-brands fa-linkedin", adress:"https://www.linkedin.com/in/adrien-moncho/" },
  { name: "Discord", icon: "fa-brands fa-discord", adress:"Muppssy#5846"  }
];


const fronts = [
  { src: "/technos/html5.png", name: "HTML5" },
  { src: "/technos/css3.png", name: "CSS3" },
  { src: "/technos/js.png", name: "JavaScript" },
  { src: "/technos/jquery.png", name: "jQuery" },
  { src: "/technos/sass.png", name: "Sass" },
  { src: "/technos/bootstrap.png", name: "Bootstrap" },
  { src: "/technos/tailwind.png", name: "Tailwind" },
  { src: "/technos/astro.png", name: "Astro Js" }
];

const backs = [
 {src:"/technos/php.webp", name: "Php"},
 {src:"/technos/symfony.png", name: "Symfony"},
 {src:"/technos/mysql.png", name: " mysql"},
 {src:"/technos/twig.png", name: "Twig"},
 {src:"/technos/elasticsearch.png", name: "Elasticsearch"}
];

