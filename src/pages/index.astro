{src:"/technos/docker.png", name: "Docker"},
{src:"/technos/git.webp", name: " Git"},
 {src:"/technos/trello.webp", name: "Trello"},
 {src:"/technos/figma.png", name: "Figma"},
 {src:"/technos/illustrator.png", name: " Illustrator"},
